{% extends 'base.html.twig' %}
{% import 'inc/modal.macro.twig' as modal %}


{% block title %}Hello ProfileController!
{% endblock %}

{% block body %}
	<div class='container-fluid'>
		<div class="row my-5">
			<div class="col-5 offset-1 col-md-3 offset-md-1">
				<div class='profile-pic-container'>
					<img src="{{user.profilePicture}}" class="img-profile">
				</div>
			</div>
			<div class="col-6 col-md-8  mt-5">
				<div class='profile-text-container'>
					<h1>{{user.username}}</h1>
					<p>Membre depuis le
						{{ user.signInDate|date('d/m/Y') }}</p>

					<p>{{numberOfCharacters}}
						Builds</p>
					<p>

						{% if numberOfComments !=0 %}
							<a href="{{ path('app_commentaries_user', {'userId': app.user.id} ) }}">


								Voir mes
								{{numberOfComments}}
								commentaires</a>
					{% else %}
						</p>
					</p>
					<p>Vous n'avez pas encore commenté de build
					{% endif %}
				</p>
				{% if app.user %}
					<a href="{{ path('app_profile_edit', { idUser: app.user.id }) }}" class="btn btn-warning">Modifier</a>
					{{ modal.deleteProfileModal(app.user) }}
				{% endif %}
			</div>
		</div>
	</div>

	<div class='profile-showcase-title'>
		<h2>Mes créations</h2>


	</div>
	<div class="dashboard-cards">
		{% if numberOfCharacters != 0 %}
			{% for character in userCharacters %}


				<a href="{{ path('app_build', {'characterId': character.id}) }}" class="card">
					<div class="card">

						<img src="{{ asset('img/' ~ character.idSubClasses.icon) }}" alt="">

						<div class="card-content">
							<h2>{{ character.name }}</h2>
							<p>Classe :
								{{ character.idSubClasses.name }}</p>
							<p>Race :
								{{ character.idSubRace.name }}</p>
							<p>
								<i class="fa-solid fa-arrow-trend-up"></i>
								{{character.getLikes()}}</p>
							<p>
								{% if character.isIsPublic() %}
									<p>
										<i class="fa-solid fa-globe"></i>
										Public</p>
								{% else %}
									<p>
										<i class="fa-solid fa-lock"></i>
										Private</p>
								{% endif %}
							</p>
						</div>
					</div>
				</a>
			{% endfor %}
		{% else %}
			<p class="mx-5">Vous n'avez pas encore créé de personnage</p>
		{% endif %}
	</div>
</div></div>{% endblock %}
