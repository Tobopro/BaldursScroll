{% macro navbar() %}
	<div class='mynav-container-container'>
		<nav class='mynav-container'>
			<div class="mynav-logo">
				<a href="/">
					<img class='logo-BS ps-2' src="{{ asset('img/logo-transparent-svg.svg') }}" alt="Logo">
				</a>
			</div>
			<div class="mynav-research">
				<i class="fa-solid fa-search fa-xl"></i>
				<form method="get" action="{{ path('app_dashboard') }}">
					<input type="text" name="search" placeholder="Search...">
					<button type="submit">Search</button>
				</form>

			</div>
			<div class="mynav-list">
				<a href="/">
					<i class="fa-solid fa-list fa-xl"></i>
				</a>
			</div>
			<div class="mynav-pencil">
				<a href="/builder">
					<i class="fa-solid fa-pen fa-xl"></i>
				</a>
			</div>
			<div class="mynav-users">
				<a href="/user">
					<i class="fa-solid fa-users"></i>
				</a>
			</div>
			{% if (app.user)%}
				<div class="mynav-login">
					<a href="{{ path('app_profile', {'idUser': app.user.id} ) }}" class="mx-5">


						<p>
							<i class="fa-regular fa-user fa-xl"></i>
							{{ app.user.username }}
						</p>
						<a href="{{ path('app_logout') }}">
							<p>
								logout
							</p>
						</a>
					</div>
				{% else %}
					<div class="mynav-login">
						<a href="{{ path('app_login') }}">
							<p>
								<i class="fa-regular fa-user fa-xl"></i>
								Login
							</p>
						</a>
					</div>
				{% endif %}
			</nav>
		</div>
		<div class='mynav-container-container-mobile'>
			<nav class='mynav-container-mobile'>
				<div class="mynav-list-mobile">
					<a href="/">
						<i class="fa-solid fa-list fa-xl"></i>
					</a>
				</div>
				<div class="mynav-pencil-mobile">
					<a href="/builder">
						<i class="fa-solid fa-pen fa-xl"></i>
					</a>
				</div>
				<div class="mynav-login-mobile">
					<a href="/profile">
						<i class="fa-regular fa-user fa-xl"></i>
					</a>
				</div>
			</nav>
		</div>
	{% endmacro %}
