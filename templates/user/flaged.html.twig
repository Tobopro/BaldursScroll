{% extends 'base.html.twig' %}

{% block title %}Comments
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<section>
			<!-- Display existing comments -->
			<div class="table-responsive">
				{% if users is not empty %}
					<h2 class="text-center mb-4">Flagged Users</h2>
					<table class="table table-hover table-dark">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Name of the build</th>
								<th scope="col">Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<th scope="row">{{ loop.index }}</th>
									<td>{{ user.username }}</td>
									<td>
										<a href="{{ path('app_user_block', {'id': user.id}) }}" class="btn btn-danger">Ban this user</a>
										<a href="{{ path('user_undo_report', {'userId': user.id}) }}" class="btn btn-success">Reject the report</a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				{% else %}
					<p class="text-center">No comments have been reported.</p>
				{% endif %}
			</div>
		</section>
	</div>
{% endblock %}
