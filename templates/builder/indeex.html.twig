{% extends 'base.html.twig' %}

{% block title %}Builder
{% endblock %}


{% block body %}
<script src='{{ asset('js/new_builder.js') }}' defer></script>

	<div class="myform-container">
		<form class="w-75 h-auto" method="POST" action="{{ path('app_builder_create') }}" name="builder">

            <div class="accordion p-0" id="accordionCreateBuild">
                {# CLASSES #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Classes
                    </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
                            {{ form_row(form.idClasses) }}
                        </div>
                    </div>
                </div>

                {# SUBCLASSES #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Sous-classes
                    </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
                                {{ form_row(form.idSubClasses) }}
                        </div>
                    </div>
                </div>

                {# RACES #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                        Races
                    </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
                            {{ form_row(form.idRaces) }}
                        </div>
                    </div>
                </div>

                {# SUBRACES #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                        Sous-races
                    </button>
                    </h2>
                    <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
						    {{ form_row(form.idSubRace) }}
                        </div>
                    </div>
                </div>

                {# ABILITIES #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                        Abilities
                    </button>
                    </h2>
                    <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
                            <section class="ability-container ">
                                <h2>Choose your characters Ability Points.</h2>
                                <div class='row_ability'>
                                    <h3 class="m-0">Ability Point</h3>
                                    <input type="number" readonly class="ability_point" name="total_points" value="27" min="0" max="27"></input>
                                </div>

                                <div class='row_ability'>
                                    <label for="strength">Strength:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="strength"></button>
                                        {{ form_widget(form.strength) }}

                                        <button type="button" class="plus" name="strength"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    <label for="dexterity">Dexterity:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="dexterity"></button>
                                        {{ form_widget(form.dexterity) }}

                                        <button type="button" class="plus" name="dexterity"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    <label for="constitution">Constitution:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="constitution"></button>
                                        {{ form_widget(form.constitution) }}

                                        <button type="button" class="plus" name="constitution"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    <label for="intelligence">Intelligence:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="intelligence"></button>
                                        {{ form_widget(form.intelligence) }}

                                        <button type="button" class="plus" name="intelligence"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    <label for="wisdom">Wisdom:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="wisdom"></button>
                                        {{ form_widget(form.wisdom) }}

                                        <button type="button" class="plus" name="wisdom"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    <label for="charisma">Charisma:</label>

                                    <div class="number-input">
                                        <button type="button" class="minus" name="charisma"></button>
                                        {{ form_widget(form.charisma) }}

                                        <button type="button" class="plus" name="charisma"></button>
                                    </div>
                                </div>

                                <div class='row_ability'>
                                    {{form_row(form.abilityScoreBonus1)}}
                                    {{form_row(form.abilityScoreBonus2)}}
                                </div>

                                <div><input type="button" class="clear-button" value="Clear" name="clear"></div>
                            </section>
                        </div>
                    </div>
                </div>

                {# SAVE #}
                <div class="accordion-item">
                    <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSix" aria-expanded="false" aria-controls="collapseSix">
                        Sauvegarder ma fiche
                    </button>
                    </h2>
                    <div id="collapseSix" class="accordion-collapse collapse" data-bs-parent="#accordionCreateBuild">
                        <div class="accordion-body">
                            {{ form_row(form.idLevel) }}
                            {{ form_row(form.name) }}
                            {{ form_row(form.save) }}
                        </div>
                    </div>
                </div>
				{{ form_row(form._token) }}

            </div>

		</form>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
{% endblock %}
